---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'now');
const { Content } = await page.render();

const lastUpdated = page.data.lastUpdated?.toLocaleDateString('en-US', { 
  month: 'long', 
  year: 'numeric' 
});
---

<BaseLayout title="Now" description="What I'm currently focused on.">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <h1 class="text-4xl sm:text-5xl font-display text-primary mb-2">NOW</h1>
    
    {lastUpdated && (
      <p class="text-sm text-muted mb-6 sm:mb-8">Last updated: {lastUpdated}</p>
    )}
    
    <div class="prose prose-zinc dark:prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </div>
</BaseLayout>