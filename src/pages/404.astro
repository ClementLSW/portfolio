---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="404" description="Page not found">
  <div class="min-h-[80vh] flex flex-col items-center justify-center px-4 text-center relative overflow-hidden">
    
    <!-- Night sky background -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0a0a12] via-[#12121f] to-[#1a1918] -z-10">
      <!-- Stars -->
      <div class="stars"></div>
      <div class="stars2"></div>
    </div>

    <!-- Content -->
    <p class="text-accent text-sm uppercase tracking-widest mb-2 animate-fadeIn">Achievement Not Unlocked</p>
    <h1 class="text-7xl sm:text-9xl font-display text-primary mb-2 animate-fadeIn">404</h1>
    <h2 class="text-2xl sm:text-3xl font-display text-primary mb-4 animate-fadeIn" style="animation-delay: 0.1s;">How Did We Get Here?</h2>
    <p class="text-secondary mb-8 max-w-md animate-fadeIn" style="animation-delay: 0.2s;">
      You've wandered off the beaten path, adventurer.<br/>
      Rest your weary legs by the fire.
    </p>

    <!-- Campfire scene -->
    <div class="campfire-container mb-8 animate-fadeIn" style="animation-delay: 0.3s;">
      <!-- Ground -->
      <div class="ground"></div>
      
      <!-- Logs -->
      <div class="logs">
        <div class="log log-1"></div>
        <div class="log log-2"></div>
      </div>
      
      <!-- Fire -->
      <div class="fire">
        <div class="flame flame-1"></div>
        <div class="flame flame-2"></div>
        <div class="flame flame-3"></div>
        <div class="flame flame-4"></div>
        <div class="flame flame-5"></div>
      </div>
      
      <!-- Sparks -->
      <div class="sparks">
        <div class="spark spark-1"></div>
        <div class="spark spark-2"></div>
        <div class="spark spark-3"></div>
        <div class="spark spark-4"></div>
      </div>
      
      <!-- Glow -->
      <div class="glow"></div>
    </div>

    <a href="/" class="btn btn-primary animate-fadeIn" style="animation-delay: 0.4s;">
      Return to Camp
    </a>
    
    <p class="text-muted text-xs mt-8 animate-fadeIn" style="animation-delay: 0.5s;">
      * No experience points were lost in this encounter
    </p>
  </div>
</BaseLayout>

<style>
  /* Stars */
  .stars, .stars2 {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-repeat: repeat;
  }
  
  .stars {
    background-image: 
      radial-gradient(1px 1px at 20px 30px, white, transparent),
      radial-gradient(1px 1px at 40px 70px, rgba(255,255,255,0.8), transparent),
      radial-gradient(1px 1px at 50px 160px, rgba(255,255,255,0.6), transparent),
      radial-gradient(1px 1px at 90px 40px, white, transparent),
      radial-gradient(1px 1px at 130px 80px, rgba(255,255,255,0.7), transparent),
      radial-gradient(1.5px 1.5px at 160px 120px, white, transparent),
      radial-gradient(1px 1px at 200px 50px, rgba(255,255,255,0.5), transparent),
      radial-gradient(1px 1px at 250px 100px, white, transparent),
      radial-gradient(1px 1px at 300px 70px, rgba(255,255,255,0.6), transparent),
      radial-gradient(1.5px 1.5px at 350px 150px, white, transparent);
    background-size: 400px 200px;
    animation: twinkle 4s ease-in-out infinite;
  }
  
  .stars2 {
    background-image: 
      radial-gradient(1px 1px at 25px 80px, rgba(255,255,255,0.7), transparent),
      radial-gradient(1px 1px at 75px 130px, white, transparent),
      radial-gradient(1px 1px at 125px 20px, rgba(255,255,255,0.6), transparent),
      radial-gradient(1.5px 1.5px at 175px 180px, white, transparent),
      radial-gradient(1px 1px at 225px 60px, rgba(255,255,255,0.8), transparent),
      radial-gradient(1px 1px at 275px 140px, white, transparent),
      radial-gradient(1px 1px at 325px 40px, rgba(255,255,255,0.5), transparent),
      radial-gradient(1.5px 1.5px at 375px 90px, white, transparent);
    background-size: 400px 200px;
    animation: twinkle 5s ease-in-out infinite;
    animation-delay: 2s;
  }
  
  @keyframes twinkle {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Campfire container */
  .campfire-container {
    position: relative;
    width: 200px;
    height: 150px;
  }
  
  /* Ground */
  .ground {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 15px;
    background: radial-gradient(ellipse, #3d3028 0%, transparent 70%);
    border-radius: 50%;
  }
  
  /* Logs */
  .logs {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .log {
    position: absolute;
    width: 60px;
    height: 14px;
    background: linear-gradient(to bottom, #5c4033 0%, #3d2817 50%, #2a1a0f 100%);
    border-radius: 7px;
  }
  
  .log-1 {
    transform: rotate(-25deg);
    left: -35px;
  }
  
  .log-2 {
    transform: rotate(25deg);
    left: -25px;
  }
  
  /* Fire */
  .fire {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 80px;
  }
  
  .flame {
    position: absolute;
    bottom: 0;
    border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
    transform-origin: bottom center;
  }
  
  .flame-1 {
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 60px;
    background: linear-gradient(to top, #ff6b35 0%, #f7c331 50%, #ffeb3b 100%);
    animation: flicker1 0.3s ease-in-out infinite alternate;
  }
  
  .flame-2 {
    left: 30%;
    transform: translateX(-50%);
    width: 20px;
    height: 45px;
    background: linear-gradient(to top, #e55a2b 0%, #f09819 100%);
    animation: flicker2 0.4s ease-in-out infinite alternate;
  }
  
  .flame-3 {
    left: 70%;
    transform: translateX(-50%);
    width: 18px;
    height: 40px;
    background: linear-gradient(to top, #e55a2b 0%, #f09819 100%);
    animation: flicker3 0.35s ease-in-out infinite alternate;
  }
  
  .flame-4 {
    left: 20%;
    transform: translateX(-50%);
    width: 12px;
    height: 30px;
    background: linear-gradient(to top, #d44a1e 0%, #e07850 100%);
    animation: flicker4 0.45s ease-in-out infinite alternate;
  }
  
  .flame-5 {
    left: 80%;
    transform: translateX(-50%);
    width: 10px;
    height: 25px;
    background: linear-gradient(to top, #d44a1e 0%, #e07850 100%);
    animation: flicker5 0.38s ease-in-out infinite alternate;
  }
  
  @keyframes flicker1 {
    0% { height: 60px; width: 30px; }
    100% { height: 70px; width: 28px; }
  }
  
  @keyframes flicker2 {
    0% { height: 45px; transform: translateX(-50%) rotate(-5deg); }
    100% { height: 55px; transform: translateX(-50%) rotate(3deg); }
  }
  
  @keyframes flicker3 {
    0% { height: 40px; transform: translateX(-50%) rotate(5deg); }
    100% { height: 50px; transform: translateX(-50%) rotate(-3deg); }
  }
  
  @keyframes flicker4 {
    0% { height: 30px; opacity: 0.8; }
    100% { height: 38px; opacity: 1; }
  }
  
  @keyframes flicker5 {
    0% { height: 25px; opacity: 0.8; }
    100% { height: 32px; opacity: 1; }
  }
  
  /* Sparks */
  .sparks {
    position: absolute;
    bottom: 60px;
    left: 50%;
    transform: translateX(-50%);
  }
  
  .spark {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #ffeb3b;
    border-radius: 50%;
    opacity: 0;
  }
  
  .spark-1 {
    animation: spark 2s ease-out infinite;
  }
  
  .spark-2 {
    left: 15px;
    animation: spark 2.3s ease-out infinite;
    animation-delay: 0.5s;
  }
  
  .spark-3 {
    left: -10px;
    animation: spark 1.8s ease-out infinite;
    animation-delay: 0.8s;
  }
  
  .spark-4 {
    left: 5px;
    animation: spark 2.1s ease-out infinite;
    animation-delay: 1.2s;
  }
  
  @keyframes spark {
    0% {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    100% {
      opacity: 0;
      transform: translateY(-80px) translateX(20px) scale(0);
    }
  }
  
  /* Glow */
  .glow {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 100px;
    background: radial-gradient(ellipse at center bottom, rgba(255, 107, 53, 0.4) 0%, rgba(255, 107, 53, 0.1) 40%, transparent 70%);
    animation: glow 1s ease-in-out infinite alternate;
    pointer-events: none;
  }
  
  @keyframes glow {
    0% { opacity: 0.8; transform: translateX(-50%) scale(1); }
    100% { opacity: 1; transform: translateX(-50%) scale(1.1); }
  }
</style>