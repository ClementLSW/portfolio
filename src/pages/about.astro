---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const page = await getEntry('pages', 'about');
const { Content } = await page.render();
---

<BaseLayout title="About" description="Game designer and aspiring studio founder based in Singapore.">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <h1 class="text-4xl sm:text-5xl font-display text-primary mb-6 sm:mb-8">
      {page.data.title.toUpperCase()}
    </h1>
    
    <div class="prose prose-zinc dark:prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </div>
</BaseLayout>