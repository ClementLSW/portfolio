const socialLinks = [
  { name: 'GitHub', href: 'https://github.com/ClementLSW' },
  { name: 'LinkedIn', href: 'https://linkedin.com/in/clement-leow-04b744151' },
  { name: 'itch.io', href: 'https://4ngrypanda.itch.io' },
  { name: 'Email', href: 'mailto:Clementlsw@gmail.com' },
];
---

