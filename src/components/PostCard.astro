---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  tags?: string[];
  coverImage?: string;
}

const { title, description, date, slug, tags = [], coverImage } = Astro.props;
const formattedDate = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
---

<article class="card group cursor-pointer">
  <a href={`/blog/${slug}`} class="flex flex-col sm:flex-row">
    <div class="sm:w-1/3 aspect-video sm:aspect-auto flex items-center justify-center text-3xl sm:text-4xl bg-surface-muted" style="min-height: 140px;">
      {coverImage ? (
        <img src={coverImage} alt="" class="w-full h-full object-cover" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"/>
      ) : (
        <span>üìù</span>
      )}
    </div>
    <div class="sm:w-2/3 p-4 sm:p-6">
      <div class="flex items-center gap-2 mb-2 sm:mb-3">
        <span class="text-xs sm:text-sm text-muted">{formattedDate}</span>
      </div>
      <h3 class="text-lg sm:text-2xl font-display text-primary group-hover:text-accent transition-colors mb-2 sm:mb-3">
        {title.toUpperCase()}
      </h3>
      <p class="text-sm text-secondary line-clamp-2">{description}</p>
      {tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mt-3">
          {tags.slice(0, 3).map((tag) => (
            <span class="text-xs text-accent">#{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</article>
