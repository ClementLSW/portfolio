---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from './BaseLayout.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, status, date, tags, event, team, role, coverImage, links } = Astro.props;

const statusConfig = {
  'released': { label: 'Released', class: 'badge-success' },
  'in-progress': { label: 'In Progress', class: 'badge-warning' },
  'prototype': { label: 'Prototype', class: 'badge-secondary' },
  'archived': { label: 'Archived', class: 'badge-secondary' },
};
---

<BaseLayout title={title} description={description} image={coverImage}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Header -->
    <header class="mb-10">
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <span class={`badge ${statusConfig[status].class}`}>
          {statusConfig[status].label}
        </span>
        {event && (
          <span class="badge badge-primary">{event}</span>
        )}
      </div>
      
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-display font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        {title}
      </h1>
      
      <p class="text-lg text-zinc-600 dark:text-zinc-400 mb-6">
        {description}
      </p>

      <!-- Meta info -->
      <div class="flex flex-wrap gap-x-6 gap-y-2 text-sm text-zinc-500 dark:text-zinc-400">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <FormattedDate date={date} />
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          {role}
        </div>
        {team && team.length > 1 && (
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Team of {team.length}
          </div>
        )}
      </div>

      <!-- Links -->
      {links && (
        <div class="flex flex-wrap gap-3 mt-6">
          {links.itch && (
            <a href={links.itch} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              Play on itch.io
            </a>
          )}
          {links.github && (
            <a href={links.github} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
              View Source
            </a>
          )}
          {links.play && (
            <a href={links.play} target="_blank" rel="noopener noreferrer" class="btn btn-primary">
              Play Now
            </a>
          )}
          {links.other?.map(({ label, url }) => (
            <a href={url} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
              {label}
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Cover Image -->
    <img 
      src={coverImage} 
      alt={title}
      class="w-full rounded-xl mb-10 border border-zinc-200 dark:border-zinc-800"
    />

    <!-- Content -->
    <div class="prose prose-zinc dark:prose-invert prose-lg max-w-none">
      <slot />
    </div>

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-10 pt-6 border-t border-zinc-200 dark:border-zinc-800">
        {tags.map((tag) => (
          <span class="badge badge-secondary">
            {tag}
          </span>
        ))}
      </div>
    )}

    <!-- Back link -->
    <div class="mt-10">
      <a href="/projects" class="inline-flex items-center gap-2 text-primary-600 dark:text-primary-400 hover:underline">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to all projects
      </a>
    </div>
  </article>
</BaseLayout>
